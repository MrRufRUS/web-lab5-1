colorText = #6f6d6d
back(size)
  background-color #f1f1f1
  box-shadow 4px 5px 10px rgba(0, 0, 0, 0.4)
  padding: size + "%"
  margin 0 0 1% 0
sect()
  display grid
  grid-auto-columns 1fr 2fr
  grid-gap 2%
  align-items center
html
  color colorText
  box-sizing:border-box;


div.images
  display grid
  grid-template-columns repeat(5, 1fr)
  grid-gap 0.5%
  back(1)
  & img
    width 100%

article
  width 80%
  margin auto
  display grid
  grid-template-columns repeat(3, 1fr)
  grid-gap 4%


  & section
    sect()
    back(2)
    & h3
      grid-column 1/3
      margin 0
      text-align center
    & img
      width 100%


nav
  back(0)
  text-align right
& a
  display inline-block
  padding 1%
  color colorText
  text-decoration: none

  &:hover
  &.active
    background-color #f87777
    color #f8f8f8

footer
  background-color colorText

  & h4
    padding 5px
    color #f8f8f8

@media (max-width 650px)
  div.images

    grid-template-columns 1fr
    grid-template-rows repeat(5, 1fr)
    width 95%
    max-height: inherit;
    padding-bottom 10.5%
  article
    margin-top 10%
    grid-template-columns 1fr
    grid-template-rows repeat(3, 1fr)
    width 95%
    padding-bottom 10.5%
